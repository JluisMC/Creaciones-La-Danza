body
    background-color: #f6f6f6
    margin: 0px
.mtop16
    margin-top: 16px

.box
    background-color: #fff
    border-radius: 8px
    border: 1px solid #d6d6d6
    position: absolute
    width: 500px
    .btn-success
        background-color: #6314A8
        border: 0px
        width: 100%
        &:hover
            color: #f6f6f6
            background-color: #6314A8
    .form-control
        &:focus
        &:active
            outline: none
            box-shadow: none
        
    .inside
        padding: 16px
// El .header es la clase para el css de la imagen
    .header
        background-color: #E5E4E4
        border-radius: 8px 8px 0px 0px
        padding: 16px
        a
            img
                display: block
                margin: 0px auto
                width: 60%
// El .footer es para el estilo del registrarse y recuperar contrase√±a
    .footer
        text-align: center
        a
            display: inline-block
            font-size: .8em
            &:last-child
                margin-left: 24px
// El .box_login regula el ajuste de la caja al medio de la pantalla
.box_login
    left calc(50% - 250px)
    top calc(50% - 300px)

.box_register
    left calc(50% - 250px)
    top calc(50% - 300px)